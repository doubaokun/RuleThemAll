def complex {
    when (
        or (
            battery (
                level is below 60%,
                plugged ac
            ),
            battery (
                or (
                    plugged wireless,
                    plugged usb
                )
            ),
            headset connected
        )
    ) do {
        set sound profile to vibrate
        send msg """
            Cześć,

            To mój pierwszy trigger!
        """ to XYZ
        send mail "To jest temat" "A to treść!" to 1@2.pl
    }
}
