def simple1 {
    when (
        battery (
            plugged ac,
            level is above 50%
        ),
        headset connected
    ) do {
        set sound profile to vibrate
    }
}

def simple2 {
    when (
        xor (
            battery (
                or (
                    plugged ac,
                    level is above 50%
                )
            ),
            headset connected
        )
    ) do {
        set sound profile to vibrate
    }
}
