def simple1 {
    when (
        battery (
            plugged ac,
            level > 50%
        ),
        headset connected
    ) do {
        set sound profile to vibrate
    }
}

def simple2 {
    when (
        xor (
            battery (
                or (
                    plugged usb,
                    level <= 70%
                )
            ),
            headset disconnected
        )
    ) do {
        set sound profile to silent
    }
}
