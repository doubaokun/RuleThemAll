def simple1 {
    when (
        battery (
            or (
                plugged ac,
                level > 50%
            )
        ),
        headset connected
    ) do {
        set sound profile to vibrate
    }
}

def simple2 {
    when (
        or (
            battery level <= 70%,
            headset disconnected
        )
    ) do {
        set sound profile to silent
    }
}
