def charger_connected  {
    when (
        battery plugged usb
    ) do {
        set brightness to 100%
        set screen timeout to never
    }
}

def charger_disconnected  {
    when (
        battery power disconnected
    ) do {
        set brightness to 75%
        set screen timeout to 1 minute
    }
}

def music_player {
    when (
        headset connected,
        wifi on
    ) do {
        launch app "Spotify"
    }
}
