def simple_sound_off {
    when (
        headset connected,
        wifi on,
        time matches "0-50/10 * * * *"
    ) do {
        set sound profile to silent
    }
}

def simple_sound_on {
    when (
        headset disconnected,
        wifi off,
        time matches "5-55/10 * * * *"
    ) do {
        set sound profile to normal
    }
}
